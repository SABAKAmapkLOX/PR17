<Window x:Class="PR17.AddItemDataGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR17"
        mc:Ignorable="d"
        Title="AddItemDataGrid" Height="650" Width="200" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Margin="5" HorizontalAlignment="Center">
            <Label Content="Familia" Margin="1"/>
            <TextBox Margin="1" Text="{Binding Path=Familia}" Name="tbFamilia"/>
            <Label Content="Ima" Margin="1"/>
            <TextBox Margin="1" Text="{Binding Path=Ima}" Name="tbIma"/>
            <Label Content="Otchestvo" Margin="1"/>
            <TextBox Margin="1" Text="{Binding Path=Otchestvo}" Name="tbOtchestvo"/>
            <Label Content="idZachetnoKnigi" Margin="1"/>
            <TextBox Margin="1" Text="{Binding Path=IdZachetnoKinigi}" Name="tbIdZachetnoKnigi"/>
            <Label Content="ChivetVObchaga"  Margin="1"/>
            <CheckBox Margin="1" Name="boolChivetVObchaga"/>
            <Label Content="idGruppa" Margin="1"/>
            <TextBox Margin="1" Text="{Binding Path=IdGruppa}" Name="tbIdGruppa"/>
            <Label Content="Math" Margin="1"/>
            <CheckBox Margin="1" Name="boolMath"/>
            <Label Content="History" Margin="1"/>
            <CheckBox Margin="1" Name="boolHistory"/>
            <Label Content="Informatic" Margin="1"/>
            <CheckBox Margin="1" Name="boolInformatic"/>
            <Label Content="PhysicalEdication" Margin="1"/>
            <CheckBox Margin="1" Name="boolPhysicalEdication"/>
            <Label Content="English" Margin="1"/>
            <CheckBox Margin="1" Name="boolEnglish"/>
            <StackPanel Orientation="Horizontal">
                <Button Margin="5" Content="Добавить" x:Name="btnAddItem" Click="btnAddItem_Click"/>
                <Button Margin="5" Content="Отмена" Click="btnClose_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
